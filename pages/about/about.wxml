<!--pages/about/about.wxml-->
<!-- 1.数据绑定 -->
<view>Hello {{name}}</view>
<view>我的年龄{{age+20}}</view>


<!-- 2.列表渲染 -->
<!-- {{}} 取变量 -->
<view wx:for="{{students}}">{{item.name}}-{{item.id}}</view>

<!-- 事件监听 -->
<view>当前计数:{{counter}}</view>
<button size="mini" bindtap="handlerButtonClick">+</button>
<button size="mini" bindtap="subHandlerButtonClick">-</button>
<button size="mini" open-type="getUserInfo" bindgetuserinfo="handlerGetUserInfo">获取用户信息</button>
<open-data type="userNickName"></open-data>
<open-data type="userAvatarUrl"></open-data>